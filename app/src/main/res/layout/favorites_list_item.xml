<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:background="@color/detail_screen_background_color">

    <ImageView
        android:id="@+id/favorite_movie_image"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/favorite_movie_image" />

    <TextView
        android:id="@+id/favorite_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/padding_small"
        android:textSize="15sp"
        android:textColor="#390098"
        android:layout_gravity="center_horizontal" />

</LinearLayout>